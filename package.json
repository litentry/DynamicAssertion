	},
	"devDependencies": {
		"@nomicfoundation/hardhat-toolbox": "^5.0.0",
		"@openzeppelin/contracts": "^4.9.0",
		"hardhat": "^2.22.5",
		"prettier-plugin-solidity": "^1.3.1"
	},
	"packageManager": "npm@10.5.0"
}
